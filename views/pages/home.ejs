<!DOCTYPE html>
<html lang="en">
  <head>

    <%- include('../layouts/head', { title: 'Home' }) %>

    <script src="/js/script.js" defer></script>
    
  </head>
  <body>

    <!-- 
      - #TOP APP BAR
    -->
    <%- include('../partials/top_app_bar') %>

    <main class="main">

      <!-- 
       - #HOME
      -->
      <article class="page home-page">
        <div class="container">

          <h2 class="headline-small page-title text-on-surface">Latest Blogs</h2>

          <div class="blog-list">

            <% if (locals.latestBlogs && locals.latestBlogs.length>0) { %>
              <% locals.latestBlogs.forEach(blog => { %>
                
                <%- include('../partials/card', { blog }) %>

              <% }); %>
            <% } else {%>
              <p>No blogs available at this moment. Please check back later.</p>
            <% } %>
            
          </div>

          <% if(locals.pagination.next || locals.pagination.prev) { %>
            <%- include('../partials/pagination') %>
          <% } %>

        </div>
      </article>
      
    </main>


    <!-- 
     - #FOOTER
    -->
    <%- include('../layouts/footer')  %>

    
  </body>
</html>
